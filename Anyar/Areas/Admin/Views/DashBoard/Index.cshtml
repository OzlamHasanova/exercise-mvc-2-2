@using Core.Entities
@model IEnumerable<TeamItems>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Striped Table</h4>
            <p class="card-description">
              <a asp-action="TeamItem/Create">Create Team</a>  
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Position
                            </th>
                            <th>
                                Description
                            </th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (TeamItems teamItems in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="~/admin/assets/images/faces/@teamItems.Image" alt="image"/>
                                </td>
                                <td>
                                    @teamItems.Name
                                </td>
                                
                                <td>
                                    @teamItems.Position
                                </td>
                                <td>
                                    @teamItems.Desc
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@teamItems.Id" class=" btn btn-primary">
                                        <i class="mdi mdi-information-variant" style="color:aqua"></i>
                                    </a>
                                    <a asp-action="Update" asp-route-id="@teamItems.Id" class=" btn btn-primary">
                                        <i class="mdi mdi-alpha-l-circle" style="color: red"></i>
                                    </a> 
                                    <a asp-action="Delete" asp-route-id="@teamItems.Id" class=" btn btn-primary">
                                        <i class="mdi mdi-delete-circle-outline" style="color: green"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                       
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

