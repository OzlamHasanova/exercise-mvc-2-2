@using Core.Entities;
@model TeamItems

@{
    ViewData["Title"] = "Update";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Form</h4>
            <p class="card-description">
                Horizontal form layout
            </p>
            <form class="forms-sample" method="post">
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Image</label>
                    <div class="col-sm-9">
                        <input asp-for="Image" type="text" class="form-control" placeholder="Image">
                        <span class="text-danger d-none" asp-validation-for="Image"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Name</label>
                    <div class="col-sm-9">
                        <input asp-for="Name" class="form-control" id="exampleInputEmail2" placeholder="Name">
                        <span class="text-danger d-none" asp-validation-for="Name"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputMobile" class="col-sm-3 col-form-label">Position</label>
                    <div class="col-sm-9">
                        <input asp-for="Position" type="text" class="form-control" id="exampleInputMobile" placeholder="Position">
                        <span class="text-danger d-none" asp-validation-for="Position"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputMobile" class="col-sm-3 col-form-label">Desc</label>
                    <div class="col-sm-9">
                        <input asp-for="Position" type="text" class="form-control" id="exampleInputMobile" placeholder="Desc">
                        <span class="text-danger d-none" asp-validation-for="Desc"></span>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <a asp-action="Index" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>
